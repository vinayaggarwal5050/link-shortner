<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>SignIn</title>
</head>
<body>
  <br>
  <a href="/">Home</a>
  <a href="/signup">Signup</a>
  <a href="/signin">Signin</a>
  <br>
  <h3>Sign in</h3>
  <div>
    <br><br>
    <form action="/users/signin" method="POST">
      <input type="text" name="email" required placeholder="enter your email id..">
      <input type="text" name="password" required placeholder="password...">
      <button type="submit" >Signin</button>
    </form>
  </div>

  <br><br>
  <% if (locals.error) { %>
    <h3> <%=locals.error %> <h3>
  <% } %>
  
  <br><br>
  <% if(locals.user) { %>
    <h4> New User Created </h4>
    <p>name: <%= locals.user.name %> email: <%= locals.user.name %> password: <%= locals.user.password %></p>
  <% } %>

  <br><br>
  <% if(locals.users) { %>

    <% locals.users.forEach(user => { %>
      <li> <%=user.name %> <%=user.email %> <%=user.password %></li>

  <%  } ) %>

  <% } %> 


</body>
</html>